/*
Location: MIDP_DIRECTORY_G table
*/

M_compliant_percentage = 
VAR _required = 
    CALCULATE(
        COUNTROWS('MIDP_DIRECTORY_G'),
        MIDP_DIRECTORY_G[COI_REQUIRED] = TRUE()
    )
VAR _compliant = 
    CALCULATE(
        COUNTROWS('MIDP_DIRECTORY_G'),
        MIDP_DIRECTORY_G[CC_compliance] = "Compliant"
    )
RETURN
    IF(
        ISBLANK(_compliant),
        "--",
        DIVIDE(
            _compliant, 
            _required, 
            BLANK()
        )
    )